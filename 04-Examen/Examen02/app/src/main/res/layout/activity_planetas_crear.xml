<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cl_crear_planeta"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.PlanetaCrear">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView
            android:id="@+id/txt_crear_planeta"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="PLANETA"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="16dp" />

        <EditText
            android:id="@+id/txt_nombre_planeta"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Ingrese el nombre del planeta"
            android:inputType="text"
            android:layout_marginBottom="8dp" />

        <EditText
            android:id="@+id/txt_diametro_planeta"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Ingrese el diámetro del planeta (km)"
            android:inputType="numberDecimal"
            android:layout_marginBottom="8dp" />

        <EditText
            android:id="@+id/txt_fecha_descubrimiento"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Ingrese la fecha de descubrimiento (yyyy-mm-dd)"
            android:inputType="date"
            android:layout_marginBottom="8dp" />

        <CheckBox
            android:id="@+id/chk_tiene_satelites"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tiene satélites"
            android:layout_marginBottom="16dp" />

        <Button
            android:id="@+id/btn_guardar_planeta"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Guardar"
            android:layout_gravity="center_horizontal" />

    </LinearLayout>

</FrameLayout>
